{
  "version" : 1,
  "index_patterns" : [
    # For multiple Sardana system it is better to define
    # one index pattern per one system. This would avoid
    # high load and possible crashes of the plugin.
    # Simply add mutliple dictionaries in the list.
    {
      "es": {
        "default_index": "logstash-*"
      },
      "tail_interval_in_seconds": 10,
      "es_index_time_offset_in_seconds": 0,
      # Sardana pushes to elastic search always logs in UTC
      # "local" configuration would use your local timezone
      # this may affect searches on timestamp.
      # As a workaround use UTC timezone. 
      "display_timezone": "Etc/UTC",
      "display_timestamp_format": "MMM DD HH:mm:ss,SSS",
      "max_buckets": 500,
      "default_time_range_in_days" : 0,
      "max_hosts": 100,
      "max_events_to_keep_in_viewer": 5000,
      "fields" : {
        "mapping" : {
            "timestamp" : "@timestamp",
            "display_timestamp" : "@timestamp",
            "hostname" : "host",
            "program": "program",
            "message": "message"
        },
        "message_format": "{{{level}}} {{{logger_name}}}: {{{message}}}"
      },
      "color_mapping" : {
          "field": "level",
          "mapping": {
              "ERROR": "#FF0000",
              "WARN": "#FFEF96",
              "INFO": "#0000FF",
              "OUTPUT": "#FFFFFF",
              "DEBUG": "#808080"
          }
      }
    }
  ]
}
